    assert result == "{\"outer\": {\"inner\": \"value\"}}"
    
    # Test with nested arrays
    text = "Text {\"items\": [1, [2, 3], 4]} more"
    result = find_json_object(text)
    assert result == "{\"items\": [1, [2, 3], 4]}"


def test_find_json_object_multiple():
